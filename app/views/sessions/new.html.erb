<% provide(:title, 'Sign in') %>
<% provide(:display_flash, 'no') %>
<div class="center">
  <h1>Sign in</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3 sign-in">
    <%= render :partial => 'layouts/flash', :locals => {:flash => flash} %>

    <%= form_for(:session, url: sessions_path) do |f| %>

        <div class="form-group">
          <%= f.label :email, class: 'control-label' %>
          <%= f.text_field :email, class: 'form-control input-lg', placeholder: 'john@doe.com' %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: 'control-label' %>
          <%= f.password_field :password, class: 'form-control input-lg', placeholder: 'â€¢' * 6 %>
        </div>

        <%= f.submit "Sign in", class: "btn btn-lg btn-primary" %>

        <span class="help-block">New user? <%= link_to "Sign up now!", signup_path %></span>
    <% end %>
  </div>
</div>