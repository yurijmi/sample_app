<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <%= render 'shared/user_info', user: @user %>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    <% followers = get_followers(@user) %>
    <% if followers.any? %>
        <section class="user_avatars">
          <% followers.each do |follower| %>
              <%= link_to gravatar_for(follower, size: 30), follower %>
          <% end %>
        </section>
    <% end %>
    <section>
      <%= render 'users/follow_form' %>
    </section>
  </aside>
  <div class="col-md-8 microposts">
    <% if @user.microposts.any? %>
        <h2>Microposts (<%= @user.microposts.count %>)</h2>
        <div class="list-group">
          <%= render @microposts %>
        </div>
        <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>