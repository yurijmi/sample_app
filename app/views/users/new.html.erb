<% provide(:title, 'Sign up') %>
<div class="center">
  <h1>Sign up</h1>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>

        <div class="form-group">
          <%= f.label :name, class: 'control-label' %>
          <%= f.text_field :name, class: 'form-control', placeholder: 'John Doe' %>
        </div>

        <div class="form-group">
          <%= f.label :email, class: 'control-label' %>
          <%= f.text_field :email, class: 'form-control', placeholder: 'john@doe.com' %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: 'control-label' %>
          <%= f.password_field :password, class: 'form-control', placeholder: '•' * 6 %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirmation", class: 'control-label' %>
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: '•' * 6 %>
        </div>

        <%= f.submit "Create my account", class: "btn btn-lg btn-primary" %>
    <% end %>
  </div>
</div>

