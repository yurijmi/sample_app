<% provide(:title, "Edit user") %>
<div class="center">
<h1>Update your profile</h1>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>

        <div class="form-group">
          <label class="control-label">Avatar</label>
          <p>
            <%= gravatar_for @user, class: 'img-thumbnail' %>
            <a href="http://gravatar.com/emails" class="btn btn-default btn-sm" role="button" target="_blank">change</a>
          </p>
        </div>

        <div class="form-group">
          <%= f.label :name, class: 'control-label' %>
          <%= f.text_field :name, class: 'form-control input-lg' %>
        </div>

        <div class="form-group">
          <%= f.label :email, class: 'control-label' %>
          <%= f.text_field :email, class: 'form-control input-lg' %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: 'control-label' %>
          <%= f.password_field :password, class: 'form-control input-lg' %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirmation", class: 'control-label' %>
          <%= f.password_field :password_confirmation, class: 'form-control input-lg' %>
        </div>

        <%= f.submit "Save changes", class: "btn btn-lg btn-primary" %>
    <% end %>
  </div>
</div>