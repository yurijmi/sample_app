<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <%= render 'shared/user_info', user: @user %>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    <section class="user_avatars" id="follower_avatars">
      <%= render 'shared/followers' %>
    </section>
    <section>
      <%= render 'users/follow_form' %>
    </section>
  </aside>
  <div class="col-md-8 microposts">
    <% if @user.microposts.any? %>
        <h2>Microposts (<%= @user.microposts.count %>)</h2>
        <div class="list-group">
          <%= render @microposts %>
        </div>
        <%= will_paginate @microposts, class: 'center' %>
    <% end %>
  </div>
</div>