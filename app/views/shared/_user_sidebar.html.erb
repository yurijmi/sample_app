<% @user ||= current_user %>
<aside class="col-md-4">
  <section>
    <%= render 'shared/user_info', user: @user %>
  </section>
  <section>
    <%= render 'shared/stats' %>
  </section>
  <% users = get_followers(@user) %>
  <% if users.any? %>
      <section class="user_avatars">
        <% users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
        <% end %>
      </section>
  <% end %>
  <% if signed_in? %>
      <section>
        <%= render 'users/follow_form' %>
      </section>
  <% end %>
  <% if current_page?(root_url) %>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
  <% end %>
</aside>